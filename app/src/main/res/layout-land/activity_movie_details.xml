<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieDetailsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        tools:context=".MovieDetailsActivity">

        <ImageView
            android:id="@+id/iv_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/origin"
            app:layout_constraintDimensionRatio="5:2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_ic_path"
            android:layout_width="@dimen/iv_ic_path_width"
            android:layout_height="@dimen/iv_ic_path_height"
            android:layout_marginStart="18dp"
            android:layout_marginTop="59dp"
            android:src="@drawable/ic_path"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/tv_back_margin_start"
            android:gravity="top"
            android:text="@string/back"
            android:textColor="@color/tv_back_textColor"
            android:textSize="@dimen/tv_back_textSize"
            app:layout_constraintBottom_toBottomOf="@id/iv_ic_path"
            app:layout_constraintStart_toEndOf="@id/iv_ic_path"
            app:layout_constraintTop_toTopOf="@id/iv_ic_path" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="iv_background" />

        <TextView
            android:id="@+id/tv_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/tv_age_margin_bottom"
            android:text="@string/age"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_age_textSize"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/barrier1"
            app:layout_constraintStart_toStartOf="@id/guideline_start" />

        <TextView
            android:id="@+id/tv_movie_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/movie_title"
            android:textColor="@color/storyline"
            android:textSize="@dimen/tv_movie_title_text_size"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/barrier1"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/barrier1" />

        <TextView
            android:id="@+id/tv_movie_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tv_movie_description_margin_top"
            android:text="@string/movie_description"
            android:textColor="@color/tv_MovieDescription"
            android:textSize="@dimen/tv_MovieDescription_textSize"
            app:layout_constraintStart_toEndOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/tv_movie_title" />

        <RatingBar
            android:id="@+id/rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="?android:attr/ratingBarStyleSmall"
            android:theme="@style/MyRatingBar"
            android:numStars="5"
            android:rating="4"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/tv_movie_description" />


        <TextView
            android:id="@+id/tv_movie_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/tv_MovieReview_marginStart"
            android:gravity="center"
            android:text="@string/movie_review"
            android:textColor="@color/movie_review"
            app:layout_constraintBottom_toBottomOf="@+id/rating_bar"
            app:layout_constraintStart_toEndOf="@id/rating_bar"
            app:layout_constraintTop_toTopOf="@+id/rating_bar" />
        <TextView
            android:id="@+id/tv_storyline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tv_storyline_margin_top"
            android:text="@string/storyline"
            android:textColor="@color/storyline"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/tv_movie_review" />

        <TextView
            android:id="@+id/tv_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tv_details_marginTop"
            android:text="@string/details"
            android:textColor="@color/movie_details"
            android:textSize="@dimen/tv_details_text_size"
            app:layout_constraintEnd_toStartOf="@id/guideline_end"
            app:layout_constraintStart_toEndOf="@id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/tv_storyline" />

        <TextView
            android:id="@+id/tv_cast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginTop="@dimen/tv_cast_MarginTop"
            android:text="@string/cast"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_details" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/margin" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_left_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_right_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/margin" />

        <ImageView
            android:id="@+id/iv_author1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/iv_author_margin_top"
            android:src="@drawable/author1"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@+id/guideline_left_center"
            app:layout_constraintStart_toEndOf="@+id/guideline_start"
            app:layout_constraintTop_toBottomOf="@+id/tv_cast" />

        <ImageView
            android:id="@+id/iv_author2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/iv_author2_margin_start"
            android:layout_marginTop="@dimen/iv_author_margin_top"
            android:layout_marginEnd="@dimen/iv_author2_marginEnd"
            android:src="@drawable/author2"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@+id/guideline_center"
            app:layout_constraintStart_toEndOf="@+id/guideline_left_center"
            app:layout_constraintTop_toBottomOf="@+id/tv_cast" />

        <ImageView
            android:id="@+id/iv_author3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/iv_author3_margin_start"
            android:layout_marginTop="@dimen/iv_author_margin_top"
            android:layout_marginEnd="@dimen/iv_author3_margin_end"
            android:src="@drawable/author3"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@+id/guideline_right_center"
            app:layout_constraintStart_toEndOf="@+id/guideline_center"
            app:layout_constraintTop_toBottomOf="@+id/tv_cast" />

        <ImageView
            android:id="@+id/iv_author4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/iv_author_margin_top"
            android:src="@drawable/author4"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@+id/guideline_end"
            app:layout_constraintStart_toEndOf="@+id/guideline_right_center"
            app:layout_constraintTop_toBottomOf="@+id/tv_cast" />

        <TextView
            android:id="@+id/tv_author1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tv_author_margin_top"
            android:text="@string/name_author1"
            android:textColor="@color/white"
            android:textSize="@dimen/author_text_size"
            app:layout_constraintEnd_toEndOf="@id/iv_author1"
            app:layout_constraintStart_toStartOf="@id/iv_author1"
            app:layout_constraintTop_toBottomOf="@id/iv_author1" />

        <TextView
            android:id="@+id/tv_author2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tv_author_margin_top"
            android:text="@string/name_author2"
            android:textColor="@color/white"
            android:textSize="@dimen/author_text_size"
            app:layout_constraintEnd_toEndOf="@id/iv_author2"
            app:layout_constraintStart_toStartOf="@id/iv_author2"
            app:layout_constraintTop_toBottomOf="@id/iv_author2" />

        <TextView
            android:id="@+id/tv_author3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tv_author_margin_top"
            android:text="@string/name_author3"
            android:textColor="@color/white"
            android:textSize="@dimen/author_text_size"
            app:layout_constraintEnd_toEndOf="@id/iv_author3"
            app:layout_constraintStart_toStartOf="@id/iv_author3"
            app:layout_constraintTop_toBottomOf="@id/iv_author3" />

        <TextView
            android:id="@+id/tv_author4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tv_author_margin_top"
            android:text="@string/name_author4"
            android:textColor="@color/white"
            android:textSize="@dimen/author_text_size"
            app:layout_constraintEnd_toEndOf="@id/iv_author4"
            app:layout_constraintStart_toStartOf="@id/iv_author4"
            app:layout_constraintTop_toBottomOf="@id/iv_author4" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>