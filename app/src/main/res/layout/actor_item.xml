<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="@dimen/card_view_author_padding">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_author"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="@dimen/card_view_age_corner_radius"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_actor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/avatars" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_full_actor_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/storyline"
        app:layout_constraintEnd_toEndOf="@id/card_view_author"
        app:layout_constraintStart_toStartOf="@id/card_view_author"
        app:layout_constraintTop_toBottomOf="@id/card_view_author"
        tools:src="@tools:sample/full_names" />

</androidx.constraintlayout.widget.ConstraintLayout>